<Window x:Class="TV_Reminder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TV_Reminder.ViewModel"
        Title="MainWindow" Height="700" Width="1000">
    <Window.DataContext>
        <vm:HelloViewModel />
    </Window.DataContext>
    <Grid>
        <UserControl Margin="0,100,0,0" Content="{Binding content}"/>
        <Button Content="Dodaj serial" Foreground="Silver" FontSize="25" HorizontalAlignment="Left" Margin="50,10,0,0" VerticalAlignment="Top" Width="215" Height="85">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.22"/>
                    <GradientStop Color="#FF153606" Offset="0.444"/>
                </LinearGradientBrush>
            </Button.Background>

        </Button>
        <Button  Content="Wyświetl śledzone seriale" Foreground="Silver" FontSize="20" HorizontalAlignment="Left" Margin="368,10,0,0" VerticalAlignment="Top" Width="250" Height="85">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.22"/>
                    <GradientStop Color="#FF153606" Offset="0.444"/>
                </LinearGradientBrush>
            </Button.Background>

        </Button>
        <Button  Content="Nieobejrzane odcinki" Foreground="Silver" FontSize="20"  HorizontalAlignment="Right" Margin="0,10,50,0" VerticalAlignment="Top" Width="215" Height="85">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.22"/>
                    <GradientStop Color="#FF153606" Offset="0.444"/>
                </LinearGradientBrush>
            </Button.Background>

        </Button>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="DarkGreen" Offset="0.0" />
                <GradientStop Color="Black" Offset="0.8" />
            </LinearGradientBrush>
        </Grid.Background>
    </Grid>
</Window>

