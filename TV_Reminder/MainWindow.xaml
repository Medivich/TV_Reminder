<Window x:Class="TV_Reminder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TV_Reminder.ViewModel"
        Title="MainWindow" Height="700" Width="1000">
    <Window.DataContext>
        <vm:HelloViewModel />
    </Window.DataContext>
    <Grid>
        <UserControl Margin="0,100,0,0" Content="{Binding content}"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="56,10,0,0" VerticalAlignment="Top" Width="176" Height="85"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="378,16,0,0" VerticalAlignment="Top" Width="172" Height="73"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="729,16,0,0" VerticalAlignment="Top" Width="171" Height="73"/>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="DarkGreen" Offset="0.0" />
                <GradientStop Color="Black" Offset="0.8" />
            </LinearGradientBrush>
        </Grid.Background>
    </Grid>
</Window>

